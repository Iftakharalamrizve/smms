{
    "logo": {
        "path": "/login",
        "src": "images/logo.webp",
        "alt": "blue",
        "name": "gPlex"
    },
    "pattern": { 
        "src": "images/cc.jpg", 
        "alt": "line-pattern" 
    },
    "title": "Login to gPlex",
    "input": [
        { 
            "icon": "person", 
            "type": "text", 
            "placeholder": "Enter user name",
            "fieldSize": "w-100 h-sm"
        },
        { 
            "icon": "lock", 
            "type": "password", 
            "placeholder": "Enter your password",
            "fieldSize": "w-100 h-sm",
            "passwordVisible" : true
        }
    ],
    "button": { "type": "button", "text": "sign in", "fieldSize": "h-sm" },
    "forgot": { "path": "/forgot-password", "text": "forgot password?" },
    "divide": { "text": "or" },
    "connect": [
        { 
            "path": "#", 
            "classes": "twitter h-sm", 
            "icon": "icofont-twitter", 
            "text": "Continue with Twitter" 
        },
        { 
            "path": "#", 
            "classes": "facebook h-sm", 
            "icon": "icofont-facebook", 
            "text": "Continue with Facebook" 
        }
    ],
    "navigate": {
        "title": "Don't have an account?",
        "path": "/register",
        "text": "register"
    }
}